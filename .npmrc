# Allow build scripts for these packages
enable-pre-post-scripts=true

# Peer dependency resolution settings
# These settings allow npm to handle peer dependency conflicts leniently,
# matching the --legacy-peer-deps flag used in CI scripts and documentation
legacy-peer-deps=true
strict-peer-dependencies=false

# pnpm monorepo settings for Expo compatibility
# Use hoisted node-linker to help Expo CLI find dependencies in monorepo
node-linker=hoisted

# Explicitly hoist React to prevent duplicate installations
# This ensures all packages use the same React instance from root
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*react-dom*