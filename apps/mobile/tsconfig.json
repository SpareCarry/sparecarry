{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "../../*"
      ],
      "@sparecarry/lib": [
        "../../packages/lib"
      ],
      "@sparecarry/lib/*": [
        "../../packages/lib/*"
      ],
      "@sparecarry/hooks": [
        "../../packages/hooks"
      ],
      "@sparecarry/hooks/*": [
        "../../packages/hooks/*"
      ],
      "@sparecarry/ui": [
        "../../packages/ui"
      ],
      "@sparecarry/ui/*": [
        "../../packages/ui/*"
      ],
      "@root-lib": [
        "../../lib"
      ],
      "@root-lib/*": [
        "../../lib/*"
      ],
      "@root-src": [
        "../../src"
      ],
      "@root-src/*": [
        "../../src/*"
      ],
      "@root-config": [
        "../../config"
      ],
      "@root-config/*": [
        "../../config/*"
      ],
      "@root-utils": [
        "../../utils"
      ],
      "@root-utils/*": [
        "../../utils/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
